<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".common.loginactivity.merchant.MapsActivity"
    android:padding="18dp"
  >
    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout"
        >
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="400dp"
        android:layout_height="280dp"

        android:src="@drawable/bglshort"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        android:elevation="3dp"/>

    <ImageView
        android:id="@+id/iconRet"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:padding="5dp"
        android:src="@drawable/return_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0"
        android:elevation="3dp"
        />


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="99dp"
            android:layout_height="142dp"
            android:elevation="3dp"
            android:src="@drawable/locdellog"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="sans-serif-black"
        android:text="Create
              Account"
        android:textAllCaps="true"
        android:textColor="#00003f"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        android:elevation="3dp"
        />

        <ImageView
            android:id="@+id/currentloc"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:elevation="20dp"
            android:src="@drawable/ic_loc"
            map:layout_constraintBottom_toBottomOf="@+id/textView10"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintHorizontal_bias="0.953"
            map:layout_constraintStart_toStartOf="@+id/textView10"
            map:layout_constraintTop_toBottomOf="@+id/imageView"
            map:layout_constraintVertical_bias="1.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="389dp"
        android:layout_height="470dp"
        android:layout_below="@id/layout"
        android:layout_marginTop="-64dp" />

    <Button
        android:id="@+id/btnPick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp"
        android:text="Pick" />

</RelativeLayout>