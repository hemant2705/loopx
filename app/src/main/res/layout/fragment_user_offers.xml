<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".usermain.userFrags.userOffers">

    <RelativeLayout
        android:id="@+id/dialogView"
        android:layout_width="300dp"
        android:layout_height="200dp"
             android:layout_gravity="center"
        android:background="@drawable/cell4">
        <TextView
            android:id="@+id/txtWlcm"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#000000"
            android:textAlignment="center"
            android:text="PLEASE SIGN IN / SIGN UP TO CONTINUE FURTHER USE "/>

        <Button
            android:id="@+id/btnSign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtWlcm"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="33dp"
            android:layout_marginEnd="50dp"
            android:gravity="center_horizontal"
            android:text="Sign in/Sign up"
            android:textSize="18sp" />
    </RelativeLayout>

</FrameLayout>